{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true, // 允许声明装饰器
    "experimentalDecorators": true,
    "types": [
      "electron-vite/node"
    ]
  },
  "files": [],
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/main/**/*",
    "src/preload/*",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.d.ts",
    "src/renderer/assets/vumeter.js",
    "src/renderer/webrtc/eraserBrush.js"
  ],
  "exclude": [
    "src/main/test/*"
  ]
}
