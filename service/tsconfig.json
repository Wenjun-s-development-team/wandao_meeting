{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "files": [
    "src/types.d.ts"
  ],
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
